   2> $TMP/tz

   if [ $? = 1 -o $? = 255 ]; then
      rm -f $TMP/tz
      exit
   fi

   TIMEZONE="`cat $TMP/tz`"
   rm -f $TMP/tz

   setzone $TIMEZONE
   exit
else
   ###
   ### use text prompts
   ###
   while [ 0 ]; do
